        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/teal_500"
            android:orientation="horizontal"
            android:weightSum="5">

            <Button
                android:id="@+id/buttonPwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FAF3F3"
                app:icon="@drawable/baseline_chat_bubble_24" />

            <TextView
                android:id="@+id/tvChangePwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center|left"
                android:text="CHAT"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtSearchHome"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/retangle_radius"
            android:drawableRight="@drawable/baseline_search_24"
            android:fontFamily="sans-serif"
            android:gravity="center|left"
            android:hint="Search"
            android:inputType="text"
            android:paddingLeft="30dp"
            android:textSize="20sp">

        </EditText>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleViewUser"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginTop="5dp"
            android:background="@color/purple_200"
            android:paddingLeft="20dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleViewChat"
            android:layout_width="match_parent"
            android:layout_height="513dp"
            android:layout_marginTop="5dp"
            android:background="@color/purple_200"
            android:paddingLeft="20dp" />


    </LinearLayout>

</RelativeLayout>